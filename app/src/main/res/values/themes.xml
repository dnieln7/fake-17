<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Fake17" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/textPrimary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Fake17.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Fake17.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom -->

    <style name="Theme.Fake17.Headline4.Colored" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Theme.Fake17.Gradient">
        <item name="android:background">@color/primary</item>
    </style>
</resources>